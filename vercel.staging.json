{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "env": {
    "NODE_ENV": "staging",
    "ENVIRONMENT": "staging"
  },
  "build": {
    "env": {
      "NODE_ENV": "staging",
      "ENVIRONMENT": "staging"
    }
  },
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "CF-Cache-Tag",
          "value": "css-assets-staging"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "CF-Cache-Tag",
          "value": "static-assets-staging"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "github": {
    "enabled": true,
    "autoAlias": true
  }
}
